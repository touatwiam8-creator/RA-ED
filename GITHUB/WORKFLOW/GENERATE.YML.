name: Generate Random Text

on:
  workflow_dispatch:
    inputs:
      prompt:
        description: "Prompt to generate"
        required: false
        default: "Generate a short random text"

jobs:
  generate:
    runs-on: ubuntu-latest
    env:
      API_KEY: ${{ secrets.API_key }}
    steps:
      - name: Call DeepSeek
        id: call_ai
        run: |
          RESPONSE=$(curl -s https://api.deepseek.com/chat/completions \
            -H "Authorization: Bearer $API_KEY" \
            -H "Content-Type: application/json" \
            -d '{
              "model":"deepseek-chat",
              "messages":[{"role":"user","content":"${{ github.event.inputs.prompt }}"}]
            }')
          echo "::set-output name=text::$RESPONSE"

      - name: Save result
        run: echo "${{ steps.call_ai.outputs.text }}" > result.txt

