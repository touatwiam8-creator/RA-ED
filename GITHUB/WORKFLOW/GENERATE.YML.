name: Generate Random Text

on:
  workflow_dispatch:
    inputs:
      prompt:
        description: "Prompt to generate"
        required: false
        default: "Generate a short random text"

jobs:
  generate:
    runs-on: ubuntu-latest
    env:
      API_KEY: ${{ secrets.API_key }}
    steps:
      - name: Checkout repository
        uses: actions/checkout@v3

      - name: Call DeepSeek
        id: call_ai
        run: |
          RESPONSE=$(curl -s https://api.deepseek.com/chat/completions \
            -H "Authorization: Bearer $API_KEY" \
            -H "Content-Type: application/json" \
            -d '{
              "model":"deepseek-chat",
              "messages":[{"role":"user","content":"${{ github.event.inputs.prompt }}"}]
            }' | jq -r '.choices[0].message.content')
          echo "{\"text\":\"$RESPONSE\"}" > random_text.json

      - name: Commit result
        run: |
          git config --local user.email "action@github.com"
          git config --local user.name "GitHub Action"
          git add random_text.json
          git commit -m "Update generated text"
          git push

          git add random_text.json
          git commit -m "Update generated text"
          git push


